    <!--==============Иконка главного меню=================-->
    <Style x:Key="MainMenuIconPathStyle" TargetType="{x:Type Path}">
        <Setter Property="Height" Value="15"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=MenuItem, AncestorLevel=1}, Path=Foreground}"/>
        <Setter Property="Data" Value="{StaticResource MainMenuButtonGeometry}"/>
    </Style>

    <!--==========Иконка меню для заголовка настроек=======-->
    <Style x:Key="SettingsIconPathStyle" TargetType="{x:Type Path}">
        <Setter Property="Height" Value="14"/>
        <Setter Property="Width" Value="14"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Fill" Value="#ff838383"/>
        <Setter Property="Margin" Value="0,0.75,0,0"/>
        <Setter Property="Data" Value="{StaticResource SettingButtonGeometry}"/>
    </Style>

    <!--==========Иконка меню для заголовка "О программе"=======-->
    <Style x:Key="InfoIconPathStyle" TargetType="{x:Type Path}">
        <Setter Property="Height" Value="14"/>
        <Setter Property="Width" Value="14"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Fill" Value="#ff838383"/>
        <Setter Property="Margin" Value="0,0.75,0,0"/>
        <Setter Property="Data" Value="{StaticResource InfoButtonGeometry}"/>
    </Style>

    <!--==========Иконка меню для заголовка "Справка"=======-->
    <Style x:Key="HelpIconPathStyle" TargetType="{x:Type Path}">
        <Setter Property="Height" Value="14"/>
        <Setter Property="Width" Value="14"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Fill" Value="#ff838383"/>
        <Setter Property="Margin" Value="0,0.75,0,0"/>
        <Setter Property="Data" Value="{StaticResource HelpButtonGeometry}"/>
    </Style>

    <!--========Шестеренка для настроек главного окна=======-->
	<Style x:Key="SettingButtonStyle" TargetType="{x:Type Button}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<ControlTemplate.Resources>
						<Style TargetType="Path">
							<Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
						</Style>
					</ControlTemplate.Resources>
					<Grid Background="Transparent" Cursor="Hand">
						<Path Width="16" Height="16"  Stretch="Fill" Data="{StaticResource SettingButtonGeometry}" Margin="0,1,0,0"/>
						<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsFocused" Value="True"/>
						<Trigger Property="IsDefaulted" Value="True"/>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Opacity" Value="0.85" />
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter Property="Opacity" Value="0.5" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="False"/>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

