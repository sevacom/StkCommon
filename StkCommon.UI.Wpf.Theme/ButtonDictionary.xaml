    <!--==========Кнопка "Справка"============-->
    <Style x:Key="HelpButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <ControlTemplate.Resources>
                        <Style TargetType="Path">
                            <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                        </Style>
                    </ControlTemplate.Resources>
                    <Grid Background="Transparent" Cursor="Hand">
                        <Path Width="14" Height="14" Stretch="Fill" Data="{StaticResource HelpButtonGeometry}" Margin="0,0.75,0,0"/>
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True"/>
                        <Trigger Property="IsDefaulted" Value="True"/>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.85" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--=====Шестеренка для редактирования настроек элемента=====-->
	<ControlTemplate x:Key="EditButtonTemplate" TargetType="{x:Type Button}">
		<Border Background="#00000000">
			<Path x:Name="picture" Width="11" Height="11" Stretch="UniformToFill" UseLayoutRounding="True" Fill="#7FFFFFFF" Data="{StaticResource EditButtonGeometry}"/>
		</Border>
		<ControlTemplate.Triggers>
			<Trigger Property="IsMouseOver" Value="true">
				<Setter Property="Fill" Value="#FFFFFF" TargetName="picture" />
			</Trigger>
			<Trigger Property="IsEnabled" Value="false">
				<Setter Property="Visibility" Value="Collapsed" />
			</Trigger>
		</ControlTemplate.Triggers>
	</ControlTemplate>

	<!--=============CheckBox=============-->
	<Style x:Key="StlnCheckBoxStyle" TargetType="{x:Type CheckBox}">
		<Setter Property="Background" Value="#ffffff"/>
		<Setter Property="BorderBrush" Value="#66333333"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type CheckBox}">
					<Grid MinWidth="40" Background="Transparent">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Border VerticalAlignment="Top" Padding="0,1,0,0" BorderThickness="0,0,0,1"  BorderBrush="#54FFFFFF" CornerRadius="2"  Margin="0,2,6,0" Height="13" Width="11" >
							<Border  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2" BorderBrush="{TemplateBinding BorderBrush}" UseLayoutRounding="True" SnapsToDevicePixels="True">
								<Canvas>
									<Path SnapsToDevicePixels="False" Name="CheckMark"  Width="9" Height="9" Canvas.Left="1" Canvas.Bottom="1" Stretch="Fill" Data="{StaticResource CheckMarkGeometry}" Fill="#000000" Visibility="Hidden" />
								</Canvas>
							</Border>
						</Border>
						<ContentPresenter UseLayoutRounding="true"  Name="CheckBoxText" VerticalAlignment="{TemplateBinding VerticalAlignment}"  Grid.Column="1" />
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsChecked" Value="true">
							<Setter Property="Visibility" Value="Visible" TargetName="CheckMark"/>
							<Setter Property="BorderBrush" Value="#99000000" />
						</Trigger>
						<Trigger Property="IsMouseOver" Value="true">
							<Setter Property="Background" Value="{StaticResource StlnBlueFillBrush}" />
							<Setter Property="BorderBrush" Value="#99003399" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="false">
							<Setter Property="Background" Value="#EDEDED"/>
							<Setter Property="Foreground" Value="#999999"/>
							<Setter Property="BorderBrush" Value="#26000000"/>
							<Setter Property="Fill" Value="#999999" TargetName="CheckMark"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--============RadioButton===========-->
	<Style x:Key="StlnRadioButtonStyle" TargetType="{x:Type RadioButton}" >
		<Setter Property="Background" Value="#ffffff"/>
		<Setter Property="BorderBrush" Value="#66333333"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type RadioButton}">
					<Grid UseLayoutRounding="False" SnapsToDevicePixels="False" Background="Transparent">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Border BorderThickness="0,0,0,1" Padding="0,1,0,0" BorderBrush="#54FFFFFF" CornerRadius="5"  Margin="0,0,6,0" Height="13" Width="11" >
							<Border  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" >
								<Path Name="Tick" Height="6" Width="6" Stretch="Fill" Data="{StaticResource TickGeometry}"  UseLayoutRounding="False" SnapsToDevicePixels="False" Visibility="Hidden">
									<Path.Fill>
										<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
											<GradientStop Color="#4d4d4d" Offset="0" />
											<GradientStop Color="#000000" Offset="1" />
										</LinearGradientBrush>
									</Path.Fill>
								</Path>
							</Border>
						</Border>
						<ContentPresenter Name="RadioButtonText" Grid.Column="1" VerticalAlignment="{TemplateBinding VerticalAlignment}" Margin="0,0,0,1" />
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsChecked" Value="true">
							<Setter Property="Visibility" Value="Visible" TargetName="Tick"/>
							<Setter Property="BorderBrush" Value="#B2000000" />
						</Trigger>
						<Trigger Property="IsMouseOver" Value="true">
							<Setter Property="Background" Value="{StaticResource StlnBlueFillBrush}" />
							<Setter Property="BorderBrush" Value="#B2003399" />
						</Trigger>
						<Trigger Property="IsEnabled" Value="false">
							<Setter Property="Background" Value="#EDEDED"/>
							<Setter Property="Foreground" Value="#999999"/>
							<Setter Property="BorderBrush" Value="#33000000"/>
							<Setter Property="Fill" Value="#999999" TargetName="Tick"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--============Button============-->
	<Style x:Key="StlnButtonStyle" TargetType="{x:Type Button}" >
		<Setter Property="Background" Value="{StaticResource StlnButtonBackgroundBrush}"/>
		<Setter Property="BorderBrush" Value="#66000000"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Foreground" Value="#333333"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="Padding" Value="1"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border BorderThickness="0,0,0,1" BorderBrush="#54FFFFFF" CornerRadius="3" >
						<Border Background="{TemplateBinding Background}" CornerRadius="3" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" SnapsToDevicePixels="True" UseLayoutRounding="True" >
							<Grid >
								<ContentPresenter Name="ButtonText" Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
								<Grid Name="InnerShadow" Visibility="Collapsed" UseLayoutRounding="False">
