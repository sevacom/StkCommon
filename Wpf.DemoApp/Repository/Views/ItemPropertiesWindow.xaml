<Window x:Class="StkCommon.UI.Wpf.DemoApp.Repository.Views.ItemPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		WindowStartupLocation="CenterOwner"
        Title="ItemPropertiesWindow" Height="137" Width="291">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Row="0">
			<TextBlock Text="Name" VerticalAlignment="Center" Margin="30,10,5,10"/>
			<TextBox  Width="200" VerticalAlignment="Center" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
		</StackPanel>
		<CheckBox Grid.Row="1" Content="IsChecked" Margin="30,10,5,10" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
		<Button Grid.Row="2" HorizontalAlignment="Right" Content="OK" Padding="30,0" Margin="10,0" Height="25" IsDefault="True" Click="ButtonOk_OnClick"/>
	</Grid>
</Window>
